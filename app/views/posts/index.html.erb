<p id="notice"><%= notice %></p>

<div class="post-malone-wrapper">
  <h1>Listing Posts</h1>
  
  <table class="table table-hover">
    <thead>
      <tr>
        <th>Title</th>
        <th>Body</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @posts.each do |post| %>
        <tr>
          <td><%= post.title %></td>
          <td><%= post.body %></td>
          <td><%= link_to 'Show', post, :class => 'btn btn_default' %></td>
          <td><%= link_to 'Edit', edit_post_path(post), :class => 'btn btn_default' %></td>
          <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' }, :class => 'btn btn_default' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>

<br>

<%= link_to 'New Post', new_post_path %>
  
</div>
